#!groovy

def baseVersion = "6.0.*"

stage('checkout') {
    node {
        git url: "https://github.com/sklintyg/statistik.git", branch: GIT_BRANCH
        util.run { checkout scm }
    }
}

stage('deploy') {
    node {
        util.run({
                def itVersion = util.latestVersion("se/inera/statistik/statistik-web", baseVersion)

                ansiblePlaybook(extraVars: [version: "${itVersion}", ansible_ssh_host: "164.40.180.107", deploy_from_repo: "true"],
                                installation: 'ansible-yum', inventory: 'ansible/inventory/statistik/demo', playbook: 'ansible/deploy.yml')

                util.waitForServer('https://demo.statistik.intygstjanster.se/version.jsp')
            })
    }
}

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxrs="http://cxf.apache.org/jaxrs"
       xmlns:jaxws="http://cxf.apache.org/jaxws"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                            http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd
                            http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd"
       profile="hsa-stub">

  <bean id="hsaServiceStub" class="se.inera.statistics.hsa.stub.HsaServiceStub"/>
  <jaxws:endpoint address="/hsa" implementor="se.inera.statistics.hsa.stub.HsaWebServiceStub"/>

  <jaxrs:server address="/hsa-api">
    <jaxrs:serviceBeans>
      <ref bean="hsaStubRestApi"/>
    </jaxrs:serviceBeans>
    <jaxrs:providers>
      <ref bean="jacksonJsonProvider"/>
    </jaxrs:providers>
    <jaxrs:extensionMappings>
      <entry key="json" value="application/json"/>
    </jaxrs:extensionMappings>
  </jaxrs:server>
  <bean id="objectMapper" class="com.fasterxml.jackson.databind.ObjectMapper"/>

  <bean id="jacksonJsonProvider" class="com.fasterxml.jackson.jaxrs.json.JacksonJaxbJsonProvider">
    <property name="mapper">
      <bean class="com.fasterxml.jackson.databind.ObjectMapper"/>
    </property>
  </bean>
  <bean id="hsaStubRestApi" class="se.inera.statistics.hsa.stub.HsaStubRestApi"/>

  <bean class="se.inera.statistics.hsa.stub.BootstrapBean"/>
</beans>

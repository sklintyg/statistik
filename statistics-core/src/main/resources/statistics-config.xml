<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<beans profile="prod">
		<context:property-placeholder
			location="
                        file:${user.home}/.statistics-prod/database.properties, 
                        file:${user.home}/.statistics-prod/application.properties" />
	</beans>

	<beans profile="qa">
		<context:property-placeholder
			location="
                        file://${user.home}/.statistics-qa/database.properties,
                       	file://${user.home}/.statistics-qa/application.properties" />

	</beans>

	<beans profile="test">
	</beans>

	<beans profile="db-embedded">
		<context:property-placeholder
			location="classpath:/db-embedded.properties,classpath:/application.properties" />
	</beans>

	<beans profile="db-psql">
		<context:property-placeholder
			location="classpath:/db-psql.properties,classpath:/application.properties" />
	</beans>

	<beans>
	    <bean class="se.inera.statistics.model.entity.IcdGroupList">
	       <property name="mappings" value="classpath:icd10groups.txt"/>
	    </bean>
		<import resource="statistics-common-config.xml" />
	</beans>
</beans>
<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd"
        >

    <bean id="jmsReceiver" class="se.inera.statistics.service.queue.JmsReceiver"/>

    <beans profile="qm">
      <bean id="jmsFactory" class="org.springframework.jndi.JndiObjectFactoryBean">
          <property name="jndiName" value="java:comp/env/jms/ConnectionFactory"/>
      </bean>
  
      <bean id="queue" class="org.springframework.jndi.JndiObjectFactoryBean">
          <property name="jndiName" value="java:comp/env/jms/Queue"/>
      </bean>
  
      <bean id="jmsContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
          <property name="connectionFactory" ref="jmsFactory"/>
          <property name="destination" ref="queue"/>
          <property name="messageListener" ref="jmsReceiver"/>
          <property name="transactionManager" ref="transactionManager"/>
      </bean>

      <bean id="mbeanServerQm" class="org.springframework.jmx.support.MBeanServerFactoryBean">
        <!-- indicate to first look for a server -->
        <property name="locateExistingServerIfPossible" value="true"/>
      </bean>

      <bean id="exporter" class="org.springframework.jmx.export.MBeanExporter">
        <property name="server" ref="mbeanServerQm"/>
        <property name="beans">
          <map>
            <entry key="inera-statistics:name=JmsContainer" value-ref="jmsContainer"/>
          </map>
        </property>
        <property name="registrationPolicy" value="REPLACE_EXISTING"/>
      </bean>

    </beans>
</beans>

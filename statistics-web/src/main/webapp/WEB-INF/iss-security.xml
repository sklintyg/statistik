<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:security="http://www.springframework.org/schema/security"
       xsi:schemaLocation="
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd
	http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.1.xsd">

	<security:http security="none" pattern="/favicon.ico" />
	<security:http security="none" pattern="/web/resources/**" />
	<security:http security="none" pattern="/resources/**" />
	<security:http security="none" pattern="/web/security/**" />
	<security:http security="none" pattern="/ws/**" />
	
	<security:http pattern="/api/**" use-expressions="true" create-session="never" realm="inera-statistics-service">
		<security:intercept-url pattern="/api/statistics/**" access="hasRole('ROLE_CAREGIVER')"/>
		<security:intercept-url pattern="/api/**" access="hasRole('ROLE_API_CLIENT')"/>
		<security:http-basic/>
	</security:http>
	
	
	<security:http use-expressions="true">
		<security:intercept-url pattern="/**" access="hasRole('ROLE_CAREGIVER')"/>
		<security:form-login login-page="/web/security/login" default-target-url="/web/start"/>
		<security:logout logout-url="/web/security/logout"/>
	</security:http>
	
	<security:authentication-manager>
		<security:authentication-provider>
			<security:user-service>
				<security:user name="hsa-id-1234" password="0000" authorities="ROLE_CAREGIVER"/>
				<security:user name="hsa-id-5678" password="0000" authorities="ROLE_CAREGIVER"/>
				<security:user name="api-user" password="password" authorities="ROLE_API_CLIENT"/>
			</security:user-service>
		</security:authentication-provider>
	</security:authentication-manager>

</beans>

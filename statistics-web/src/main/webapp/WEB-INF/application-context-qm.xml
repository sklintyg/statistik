<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
        >

    <bean id="jmsReceiver" class="se.inera.statistics.service.queue.JmsReceiver"/>

    <beans profile="test,qa,prod">
      <bean id="jmsFactory" class="org.springframework.jndi.JndiObjectFactoryBean">
          <property name="jndiName" value="java:comp/env/jms/ConnectionFactory"/>
      </bean>
  
      <bean id="queue" class="org.springframework.jndi.JndiObjectFactoryBean">
          <property name="jndiName" value="java:comp/env/jms/Queue"/>
      </bean>
  
      <bean id="jmsContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
          <property name="connectionFactory" ref="jmsFactory"/>
          <property name="destination" ref="queue"/>
          <property name="messageListener" ref="jmsReceiver"/>
          <property name="sessionAcknowledgeMode" value="#{T(javax.jms.Session).CLIENT_ACKNOWLEDGE}"/>
      </bean>
    </beans>
</beans>

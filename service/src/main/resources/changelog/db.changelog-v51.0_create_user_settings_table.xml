<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd"
        logicalFilePath="liquibase/db.changelog-v51.0_create_user_settings_table.xml">
    <changeSet id="50_create_user_settings_table" author="martin.hesslund">
        <createTable tableName="user_settings">
            <column name="hsaid" type="varchar(128)">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="show_messages_per_lakare" defaultValueBoolean="false" type="boolean"/>
        </createTable>
    </changeSet>
</databaseChangeLog>

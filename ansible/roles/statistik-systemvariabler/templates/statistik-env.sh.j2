ENV_CFG="-Dspring.profiles.active={{ profile }}"
JVM_CFG="-Xms1024m -Xmx2024m -XX:PermSize=128m -XX:MaxPermSize=512m -Dfile.encoding=UTF-8"
DEBUG_CFG="-XX:-HeapDumpOnOutOfMemoryError -XX:HeapDumpPath={{ inera_tomcat_folder }}"
CREDENTIALS_CFG="-Dcredentials.file={{ tomcat_etc }}/credentials.properties"
STATISTIK_CFG="-Dstatistics.config.file={{ tomcat_etc }}/statistics.properties -Dlogback.configurationFile={{ tomcat_etc }}/statistics-logback.xml"
export JAVA_OPTS="$JAVA_OPTS $ENV_CFG $JVM_CFG $DEBUG_CFG $CREDENTIALS_CFG $STATISTIK_CFG"

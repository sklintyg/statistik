ENV_CFG="-Dspring.profiles.active={{ profile }}"
JVM_CFG="-Xms1024m -Xmx2024m -XX:PermSize=128m -XX:MaxPermSize=512m -Dfile.encoding=UTF-8"
DEBUG_CFG="-XX:-HeapDumpOnOutOfMemoryError -XX:HeapDumpPath={{ inera_tomcat_folder }}"
CREDENTIALS_CFG="-Dcredentials.file={{ tomcat_etc }}/credentials.properties"
LOGBACK_CFG="-Dlogback.configurationFile={{ tomcat_etc }}/statistics-logback.xml"
STATISTIK_CFG="-Dstatistics.config.folder={{ tomcat_etc }} -Dstatistics.config.file={{ tomcat_etc }}/statistics.properties"
export JAVA_OPTS="$JAVA_OPTS $ENV_CFG $JVM_CFG $DEBUG_CFG $CREDENTIALS_CFG $STATISTIK_CFG $LOGBACK_CFG"
